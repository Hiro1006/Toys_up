<div class='container'>
  <div class=''>
    <div class=''>
  		<font size="6" face="Comic Sans MS" color="#ff6347">検索結果</font>
  		<table  class="table table-hover">
              <thead>
                <tr>
                  <th scope="col">おもちゃのなまえ</th>
                  <th scope="col">がぞう</th>
                  <th scope="col">せつめい</th>
                  <th scope="col"></th>
                  <th></th>
                  <th></th>
                </tr>
              </thead>
              <tbody>

          <% @toys.each do |toy| %>
          <tr>
                    <td><%= link_to toy.name,toy, class: "toy_#{toy.id}" %><br><%= image_tag toy.image, size: "100x100" %></td>
                    <td><%= toy.genre.name %></td>
                    <td><%= toy.caption %></td>
                    <td><%= link_to toy.end_user.nickname, end_user_path(toy.end_user) %></td>
                    <td><%= link_to "#{toy.post_comments.count} コメント", toy_path(toy.id) %></td>
                    <td><i class="fa fa-heart like-btn" color="red"></i><%= toy.favorites.count %> いいね</td>
                  </tr>
                  <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>