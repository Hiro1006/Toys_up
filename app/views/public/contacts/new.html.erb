<div class='container'>
  <div class='row'>
    <div class='col-md-11 offset-md-1'>
<%= form_for(@contact, url: confirm_path) do |f| %>
  <div class="form-group">
    <%= f.label :name, 'お名前*' %>
    <%= f.text_field :name, autofocus: true, class: 'col-lg-3 form-control' %>
  </div>

  <div class="form-group">
    <%= f.label :message, 'メッセージ*' %>
    <%= f.text_area :message, size: '10x10', class: 'form-control' %>
  </div>

  <div>
    <%= f.submit '入力内容確認', class: 'btn btn-success' %>
  </div>
<% end %>
    </div>
  </div>
</div>