<div class="container" style="margin-top: 20px;">
  <div class="row">
    <div class="mx-auto">
      <table>
      <tbody>
        <tr>
          <td>お名前</td>
          <td><%= @contact.name %></td>
        </tr>
        <tr>
          <td>メッセージ</td>
          <td><%= @contact.message %></td>
        </tr>
      </tbody>
      </table>

    <%= form_for(@contact) do |f| %>
      <%= f.hidden_field :name %>
      <%= f.hidden_field :email %>
      <%= f.hidden_field :phone_number %>
      <%= f.hidden_field :subject %>
      <%= f.hidden_field :message %>
      <div><%= f.submit '送信', class: 'mt-2 btn btn-info' %></div>
    <% end %>
    <%= form_for @contact, url: back_path do |f| %>
      <%= f.hidden_field :name %>
      <%= f.hidden_field :email %>
      <%= f.hidden_field :phone_number %>
      <%= f.hidden_field :subject %>
      <%= f.hidden_field :message %>
      <div><%= f.submit '入力画面に戻る', class: 'mt-2 btn btn-success' %></div>
    <% end %>
    </div>
  </div>
</div>