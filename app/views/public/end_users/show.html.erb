<div class="container" style="margin-top: 20px;">
 <div class="row">
  <div class="col-12">
    <font size="6" face="Comic Sans MS" color="blue">My page</font>


<table class="table table-striped table-bordered bg-color:success mt-3">
  <tbody>
    <tr>
      <th width="20%">氏名</th>
      <td><%= @end_user.last_name %> <%= @end_user.first_name %></td>
    </tr>
    <tr>
      <th>ニックネーム</th>
      <td><%= @end_user.nickname %></td>
    </tr>
    <tr>
      <th>郵便番号</th>
      <td><%= @end_user.postal_code %></td>
    </tr>
    <tr>
      <th>住所</th>
      <td><%= @end_user.address %></td>
    </tr>
    <tr>
      <th>メールアドレス</th>
      <td><%= @end_user.email %></td>
    </tr>
    <tr>
      <th>フォロワー数</th>
      <td> <%= @end_user.followers.count %></td>
    </tr>

  </tbody>
</table>
<%= link_to "お気に入り記事",favorites_end_user_path(@end_user), class: "btn btn-warning mb-4" %><br>
<%= link_to "プロフィールを編集する", edit_end_user_path(@end_user), class: "btn btn-success mb-4" %><br>
<% unless @end_user.id == current_end_user.id %> <!--現在ログインしているユーザーではないという条件をつけ、APIのメソッドを使って、相互フォロー状態の時という条件を表す-->
  <% if (current_end_user.following? @end_user) && (@end_user.following? current_end_user) %>
  <% if @isRoom == true %>
    <p class="user-show-room"><a href="/rooms/<%= @roomId %>" class="btn btn-primary btn-lg">チャットへ</a>
  <% else %>
    <%= form_for @room do |f| %>
      <%= fields_for @entry do |e| %>
        <%= e.hidden_field :end_user_id, value: @end_user.id %>
      <% end %>
      <%= f.submit "チャットを始める", class:"btn btn-primary btn-lg user-show-chat"%>
    <% end %>
  <% end %>
  <% end %>
<% end %>


    </div>
  </div>
</div>