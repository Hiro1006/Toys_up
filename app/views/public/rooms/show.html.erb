<div class="container" style="margin-top: 20px;">
  <div class="row">
    <div class="mx-auto">
      <%= link_to "会員一覧に戻る", "/public/end_users/index",class:"edit-link" %>
      <h4 class="mt-4"><font color="#008b8b"><strong>チャットメンバー</h4>
      <% @entries.each do |e| %>
      <div class="user-name">
      <strong>
        <a class="rooms-user-link" href="/end_users/<%= e.end_user.id %>">
          <%= e.end_user.nickname %>さん
        </a>
      </strong>
      </div>
      <% end %>
      <hr>
      <div class="chats">
        <% if @messages.present? %>
          <% @messages.each do |m| %>
          <div class="chat-box">
            <div class="chat-face">
              <%= m.end_user.nickname %>
            </div>
            <div class="chat-hukidashi"> <strong><%= m.message %></strong> <br>
              <%= m.created_at.strftime("%Y-%m-%d %H:%M")%>
            </div>
          </div>
          <% end %>
        <% end %>
      </div>
      <div class="posts">
        <%= form_for @message do |f| %>
          <%= f.text_field :message, placeholder: "メッセージを入力して下さい" , size: 70, class:"form-text-field" %>
          <%= f.hidden_field :room_id, value: @room.id %>
          <%= f.submit "投稿",class: 'form-submit'%>
        <% end %>
      </div>
    </div>
  </div>
</div>
