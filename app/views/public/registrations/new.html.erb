<div class="container" style="margin-top: 20px;">
  <div class="row">
    <div class="mx-auto">
      <font size="6" face="Comic Sans MS" color="green">Sign Up</font>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= render "public/shared/error_messages", resource: resource %>

  <div class="field form-group col-xs-12 mt-3">
    <%= f.label :"名前", class: "col-sm-2 control-label" %>
    <%= f.label :"(姓)", class: "col-sm-1 control-label" %>
    <%= f.text_field :last_name, autofocus: true, class: "col-sm-3 form-control-static name" %>
    <%= f.label :"(名)", class: "col-sm-1 control-label" %>
    <%= f.text_field :first_name, autofocus: true, class: "col-sm-3 form-control-static name" %>
  </div>

  <div class="field form-group col-xs-12">
    <%= f.label :"ニックネーム", class: "col-lg-3 control-label" %>
    <%= f.text_field :nickname, autofocus: true, class: "col-lg-4 form-control-static name" %>
  </div>

  <div class="field form-group col-xs-12">
    <%= f.label :"email", class: "col-lg-3 control-label" %>
    <%= f.email_field :email, autofocus: true, class: "col-lg-4 form-control-static name", autocomplete: "email" %>
  </div>

  <div class="field form-group col-xs-12">
    <%= f.label :password, class: "col-lg-3 control-label" %>
    <%= f.password_field :password, autocomplete: "new-password" %>
    <% if @minimum_password_length %>
    <em>(<%= @minimum_password_length %> characters minimum)</em>
    <% end %>
  </div>

  <div class="field form-group col-xs-12">
    <%= f.label :"password(確認用)", class: "col-lg-3 control-label" %>
    <%= f.password_field :password_confirmation, autofocus: true, autocomplete: "new-password" %>
  </div>

  <div class="field form-group col-xs-12">
    <%= f.label :"郵便番号(ハイフン無し)", class: "col-lg-4 control-label" %>
    <%= f.text_field :postal_code, autofocus: true, autocomplete: "postal_code" %>
  </div>

  <div class="field form-group col-xs-12">
    <%= f.label :"住所", class: "col-lg-4 control-label" %>
    <%= f.text_field :address, class: "col-lg-6 control-label", autofocus: true, autocomplete: "address" %>
  </div>

  <div class="actions">
    <%= f.submit "登録する", class: 'btn btn-success' %>
  </div>
<% end %>

<%= render "public/shared/links" %>
    </div>
  </div>
</div>
