<div class='container'>
  <div class='row'>
    <div class='col-md-12 offset-md-1'>
  		<font size="6" face="Comic Sans MS" color="#ff6347">Toy detail</font>
  		<table  class="table table-hover">
              <thead>
                <tr>
                  <th scope="col"><i class="fas fa-gift"></i>おもちゃのなまえ</th>
                  <th scope="col">がぞう</th>
                  <th scope="col"><i class="fas fa-file-signature"></i>せつめい</th>
                  <th scope="col"><i class="fas fa-user"></i>もちぬし</th>
                  <th></th>
                  <th></th>
                </tr>
              </thead>
              <tbody>
  		  <tr>
          <td>
            <%= @toy.name %>
          </td>
          <td><%= image_tag @toy.image, size: "200x200" %></td>
          <td><%= @toy.caption %></td>
          <td><%= link_to @toy.end_user.nickname, admin_end_user_path(@toy.end_user) %></td>
          <td>
              <%= link_to 'Destroy', @toy, method: :delete, data: { confirm: '本当に消しますか？' }, class: "btn btn-sm btn-danger destroy_toy_#{@toy.id}"%>
          </td>
        </tr>
        </tbody>
      </table>
    </div>
  </div>
</div>